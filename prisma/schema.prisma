generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String            @id @default(cuid())
  name           String?
  email          String            @unique
  passwordHash   String
  createdAt      DateTime          @default(now())
  updatedAt      DateTime          @updatedAt
  clients        Client[]
  proformas      Proforma[]
  companySetting CompanySettings?
}

model Client {
  id             String     @id @default(cuid())
  userId         String
  nombre         String
  empresa        String
  cedulaJuridica String
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt
  user           User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  proformas      Proforma[]

  @@unique([userId, cedulaJuridica])
  @@index([userId, nombre])
  @@index([userId, empresa])
  @@index([userId, cedulaJuridica])
}

model Proforma {
  id                    String         @id @default(cuid())
  userId                String
  clientId              String?
  status                ProformaStatus @default(DRAFT)
  number                String
  year                  Int
  sequence              Int
  clientNombre          String
  clientEmpresa         String
  clientCedulaJuridica  String
  discount              Decimal?       @db.Decimal(12, 2)
  subtotal              Decimal         @db.Decimal(12, 2)
  total                 Decimal         @db.Decimal(12, 2)
  notes                 String?
  createdAt             DateTime        @default(now())
  updatedAt             DateTime        @updatedAt
  user                  User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  client                Client?         @relation(fields: [clientId], references: [id], onDelete: SetNull)
  items                 ProformaItem[]

  @@unique([userId, number])
  @@index([userId, createdAt])
}

enum ProformaStatus {
  DRAFT
  SENT
  PAID
}

model ProformaItem {
  id          String   @id @default(cuid())
  proformaId  String
  description String
  quantity    Int
  unitPrice   Decimal  @db.Decimal(12, 2)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  proforma    Proforma @relation(fields: [proformaId], references: [id], onDelete: Cascade)
}

model CompanySettings {
  id        String   @id @default(cuid())
  userId    String   @unique
  name      String
  contactName String?
  cedula    String?
  address   String?
  phone     String?
  email     String?
  logoUrl   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}
